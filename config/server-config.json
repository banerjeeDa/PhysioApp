{
  "server": {
    "port": 3001,
    "host": "0.0.0.0",
    "environment": "development"
  },
  "cors": {
    "development": {
      "origin": true,
      "credentials": true,
      "methods": ["GET", "POST", "PUT", "DELETE", "OPTIONS"],
      "allowedHeaders": ["Content-Type", "Authorization", "X-Requested-With"]
    },
    "production": {
      "origin": ["https://yourdomain.com", "https://www.yourdomain.com"],
      "credentials": true,
      "methods": ["GET", "POST", "PUT", "DELETE", "OPTIONS"],
      "allowedHeaders": ["Content-Type", "Authorization", "X-Requested-With"]
    }
  },
  "security": {
    "rateLimit": {
      "windowMs": 15 * 60 * 1000,
      "max": 100
    }
  }
} 